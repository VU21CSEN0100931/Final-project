<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Signup</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }

        body {
            background: linear-gradient(to right, #e2e2e2, #c9d6ff);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            flex-direction: column;
        }

        nav {
            position: absolute;
            top: 20px;
            left: 20px;
        }

        nav a {
            text-decoration: none;
            color: white;
            font-weight: bold;
            background: #5a5a5a;
            padding: 10px 15px;
            border-radius: 5px;
        }

        .container {
            background-color: #fff;
            border-radius: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.35);
            position: relative;
            overflow: hidden;
            width: 768px;
            max-width: 100%;
            min-height: 500px;
        }

        .container button {
            background-color: orange;
            color: white;
            padding: 10px 45px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 10px;
            border: none;
        }

        .container button:hover {
            background-color: #00a1ff;
        }

        .form-container {
            position: absolute;
            top: 0;
            height: 100%;
            transition: all 0.6s ease-in-out;
        }

        .sign-in, .sign-up {
            width: 50%;
            position: absolute;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
        }

        .sign-up {
    left: 100%;
    opacity: 0;
    z-index: 1;
    transition: all 0.6s ease-in-out;
}


        .container.active .sign-up {
            transform: translateX(-100%);
            opacity: 1;
            z-index: 5;
        }

        .sign-in {
            left: 3%;
            z-index: 3;
        }

        .container.active .sign-in {
            transform: translateX(-100%);
            opacity: 0;
        }

        .toggle-container {
            position: absolute;
            top: 0;
            left: 50%;
            width: 50%;
            height: 100%;
            transition: all 0.6s ease-in-out;
            border-radius: 150px 0 0 100px;
            z-index: 1000;
            background: linear-gradient(to right, #C33764, #1D2671);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container.active .toggle-container {
            transform: translateX(-100%);
            border-radius: 0 150px 100px 0;
        }

        .toggle-panel {
            text-align: center;
        }

        .input-field, .select-field {
            background-color: #eee;
            border: none;
            margin: 8px 0;
            padding: 10px 15px;
            font-size: 13px;
            border-radius: 8px;
            width: 80%;
            outline: none;
        }

        .message {
            color: red;
            margin-top: 10px;
        }

 
    </style>
</head>

<body>

    <nav>
        <a href="/">üè† Home</a>
    </nav>

    <div class="container" id="container">
        <!-- Signup Form -->
        <div class="form-container sign-up">
            <form id="signup-form">
                <h1>Create Account</h1>
                <input type="text" placeholder="Username" class="input-field" id="signup-username">
                <input type="password" placeholder="Password" class="input-field" id="signup-password">

                <!-- Bazaar Selection Dropdown -->
                <select class="select-field" id="signup-bazaar">
                    <option value="">-- Select Bazaar --</option>
                    <option value="Bazaar 1">Bazaar 1</option>
                    <option value="Bazaar 2">Bazaar 2</option>
                    <option value="Bazaar 3">Bazaar 3</option>
                    <option value="Bazaar 4">Bazaar 4</option>
                </select>

                <button type="submit">Sign Up</button>
                <p class="message" id="signup-message"></p>
            </form>
        </div>

        <!-- Login Form -->
        <div class="form-container sign-in">
            <form id="login-form">
                <h1>Sign In</h1>
                <input type="text" placeholder="Username" class="input-field" id="login-username">
                <input type="password" placeholder="Password" class="input-field" id="login-password">
                <button type="submit">Login</button>
                <p class="message" id="login-message"></p>
            </form>
        </div>

        <!-- Toggle Panel -->
        <div class="toggle-container">
            <div class="toggle-panel">
                <h1 id="toggle-title">Welcome</h1>
                <p id="toggle-text">Enter your details to sign up</p>
                <button id="toggle-btn">Sign Up</button>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('container');
        const toggleBtn = document.getElementById('toggle-btn');
        const toggleTitle = document.getElementById('toggle-title');
        const toggleText = document.getElementById('toggle-text');

        toggleBtn.addEventListener('click', () => {
    container.classList.toggle("active");

    if (container.classList.contains("active")) {
        toggleTitle.innerText = "Welcome Back!";
        toggleText.innerText = "Enter your details to login";
        toggleBtn.innerText = "Login";
    } else {
        toggleTitle.innerText = "Welcome!";
        toggleText.innerText = "Enter your details to sign up";
        toggleBtn.innerText = "Sign Up";
    }
});


        document.getElementById('signup-form').addEventListener('submit', function (e) {
            e.preventDefault();
            const username = document.getElementById('signup-username').value;
            const password = document.getElementById('signup-password').value;
            const bazaarName = document.getElementById('signup-bazaar').value;

            fetch('/api/signup', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username, password, bazaarName })
            })
            .then(res => res.json())
    .then(result => {
      if(result.success) {
        window.location.href = '/login';  // Redirects to login after successful signup
      } else {
        document.getElementById('signup-message').innerText = result.message;
      }
    })
    .catch(err => {
      document.getElementById('signup-message').innerText = 'Error: ' + err;
    });
  });
        document.getElementById('login-form').addEventListener('submit', function (e) {
            e.preventDefault();
            const username = document.getElementById('login-username').value;
            const password = document.getElementById('login-password').value;

            fetch('/api/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username, password })
            }).then(res => res.json()).then(result => {
                if (result.success) window.location.href = '/admin';
                else document.getElementById('login-message').innerText = result.message;
            });
        });
    </script>

</body>
</html>
